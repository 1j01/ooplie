{
  "name": "ooplie",
  "description": "Program in English",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "http://github.com/1j01/ooplie.git"
  },
  "bugs": {
    "url": "http://github.com/1j01/ooplie/issues"
  },
  "license": "GPL-3.0",
  "keywords": [
    "ooplie",
    "object-oriented",
    "programming",
    "language",
    "programming-language",
    "program",
    "natural-language",
    "natural",
    "command",
    "interpret",
    "interpreter",
    "english",
    "dynamic",
    "lingual",
    "engine",
    "algebra",
    "math",
    "maths",
    "mathematics",
    "scripting",
    "scripting-language",
    "script",
    "web"
  ],
  "main": "ooplie.js",
  "scripts": {
    "prepublish": "browserify -t coffeeify --extension=\".coffee\" ./src/ooplie.coffee -o ooplie.js --standalone OOPLiE",
    "develop-not-working": "watchify -v -t coffeeify --extension=\".coffee\" ./src/ooplie.coffee -o ooplie.js --standalone OOPLiE",
    "develop-not-working-with-polling": "watchify -v -t coffeeify --extension=\".coffee\" ./src/ooplie.coffee -o ooplie.js --standalone OOPLiE --poll=100",
    "develop-also-not-working": "watch-run -i -p '**/*.coffee' \"browserify -t coffeeify --extension=\\\".coffee\\\" src/ooplie.coffee -o ooplie.js --standalone OOPLiE\"",
    "develop-slow": "npm run prepublish && rerun-script",
    "develop-also-broken": "npm-watch",
    "develop-also-does-not-work": "watchy -w src -- npm run prepublish",
    "test": "mocha --compilers coffee:coffee-script/register --ui tdd tests/"
  },
  "watches": {
    "prepublish": "**/*.coffee"
  },
  "watch": {
    "prepublish": "**/*.coffee"
  },
  "devDependencies": {
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "coffee-script": "^1.10.0",
    "coffeeify": "^2.0.1",
    "mocha": "^2.4.5",
    "npm-watch": "0.0.1",
    "rerun-script": "^0.6.0",
    "watch-run": "^1.2.4",
    "watchify": "^3.7.0",
    "watchy": "^0.6.6"
  }
}
